                    fi
                fi

                # ðŸš« Mark as dormant if past threshold
                if [ "$diff_days" -ge "$DORMANT_USERACCOUNT_DURATION" ]; then
                    dormant_detected_user+=("$user")
                fi
            fi
        fi
    done
}


